			<pos>0.095 0.873</pos>
			<format>%Y</format>
			<zIndex>71</zIndex>
			<fontPath>./assets/Product Sans Regular.ttf</fontPath>
			<fontSize>0.027</fontSize>
			<color>ffffff</color>
			<origin>0 0</origin>
		</datetime>
		
